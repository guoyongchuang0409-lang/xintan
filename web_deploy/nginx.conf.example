# 心探 Web 应用 - Nginx 配置示例

server {
    listen 80;
    listen [::]:80;
    server_name xintan.yourdomain.com;
    
    # 如果使用 HTTPS，取消下面的注释
    # listen 443 ssl http2;
    # listen [::]:443 ssl http2;
    # ssl_certificate /path/to/cert.pem;
    # ssl_certificate_key /path/to/key.pem;
    
    root /usr/share/nginx/html/xintan;
    index index.html;
    
    # 日志
    access_log /var/log/nginx/xintan_access.log;
    error_log /var/log/nginx/xintan_error.log;
    
    # 启用 GZIP 压缩
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_comp_level 6;
    gzip_types 
        text/plain 
        text/css 
        text/xml 
        text/javascript 
        application/javascript 
        application/json 
        application/xml+rss 
        application/wasm
        image/svg+xml;
    
    # 处理 Flutter 路由
    location / {
        try_files $uri $uri/ /index.html;
    }
    
    # 缓存静态资源 - 图片
    location ~* \.(jpg|jpeg|png|gif|ico|svg|webp)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }
    
    # 缓存静态资源 - CSS/JS/WASM
    location ~* \.(css|js|wasm)$ {
        expires 1M;
        add_header Cache-Control "public, immutable";
        access_log off;
    }
    
    # 缓存字体文件
    location ~* \.(ttf|otf|woff|woff2|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }
    
    # HTML 文件不缓存
    location ~* \.html$ {
        expires -1;
        add_header Cache-Control "no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0";
    }
    
    # 安全头
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    
    # 禁止访问隐藏文件
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
}

